<!--index.wxml-->
<view class="container">
  <view class="userinfo">
    <button wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo" class="btn"> 获取头像昵称 </button>
    <block wx:else>
      <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
      <text class="userinfo-nickname">{{userInfo.nickName}}</text>
    </block>
  </view>
  <view class="usermotto">
    <text class="{{qing?'view_show':'view_hide'}}" bindtap="btnClickFn">{{"请确认授权"}}</text>
    <text class="{{!qing?'view_show':'view_hide'}}"  bindtap="btnClickFn">{{"请"}}</text>
  </view>
</view>