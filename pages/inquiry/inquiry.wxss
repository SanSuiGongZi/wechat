  font-size: 35rpx;
  color: #444;
  line-height: 7vw;
  padding: 2vw 2vw;
  background-color: #fff;
  margin-left: 15.0vw;
  border-radius: 20%;
  z-index: 10;
}

.section {
  color: #444;
}

.section__title {
  color: #444;
}

